{
  "require": {
    "php": ">=7.2",
    "ext-dom": "*",
    "ext-openssl": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-curl": "*",
    "ext-intl": "*",
    "slim/slim": "4.*",
    "slim/psr7": "^1.0",
    "php-di/slim-bridge": "^3.0",
    "doctrine/annotations": "^1.10",
    "monolog/monolog": "^2.0",
    "guzzlehttp/guzzle": "^6.5",
    "zircote/swagger-php": "^3.0",
    "slim/php-view": "^2.2",
    "swagger-api/swagger-ui": "^3.25"
  },
  "autoload": {
    "psr-0": {
      "Requests": "library/"
    },
    "psr-4": {
      "ProxyBank\\": "src/ProxyBank"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "mikey179/vfsstream": "~1"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@composer install",
      "vendor/phpunit/phpunit/phpunit --configuration phpunit.xml --coverage-text"
    ],
    "post-install-cmd": [
      "ProxyBank\\Composer::copySwaggerUIAssets"
    ],
    "post-update-cmd": [
      "ProxyBank\\Composer::copySwaggerUIAssets"
    ]
  },
  "scripts-descriptions": {
    "test": "Run all tests!"
  }
}
